generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Enum de categorias para filtrar por seccion
enum Categoria {
  DEPORTE
  FICCION
  HISTORIA
  INFANTIL
}

// Modelo de Libro del front
model Book {
  id            Int @id @default(autoincrement())
  titulo        String
  autor         String
  descripcion   String
  categoria     Categoria
  portada       String?
  createdAt     DateTime @default(now())

  @@index([categoria])
  @@unique([titulo, autor, categoria]) // ‚Üê esto es una regla que evita duplicar el mismo libro en la misma categoria
}